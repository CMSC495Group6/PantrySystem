<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <EditText android:id="@+id/add_item_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="text" />
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
    	
	    <TextView android:id="@+id/expiration_date_display"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    
	    <Button android:id="@+id/expiration_date_input_button"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/button_input_date"
	        android:onClick="displayCalendar" />
	    
	</LinearLayout>
    
    <EditText android:id="@+id/add_item_quantity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="number" />
    
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
        
        <Button android:id="@+id/add_item_cancel_button"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_cancel" />
        
        <Button android:id="@+id/add_item_ok_button"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

</LinearLayout>
